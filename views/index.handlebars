<h1>Devour that Burger!</h1>

<ul id="left">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>


<ul id="right">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="burg" name="name" placeholder="Enter your burger of choice">
  </div>

  <button type="submit">Add Burger</button>
</form>